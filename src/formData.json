{
  "fields": [
    {
      "id": "name",
      "type": "text",
      "label": "Full Name",
      "required": true,
      "validation": {
        "pattern": "^[a-zA-Z\\s]{2,50}$"
      }
    },
    {
      "id": "age",
      "type": "number",
      "label": "Age",
      "validation": {
        "min": 18,
        "max": 100
      }
    },
    {
      "id": "role",
      "type": "select",
      "label": "Role",
      "validation": {
        "options": ["Developer", "Designer", "Manager"]
      },
      "required": true
    }
  ]
}
